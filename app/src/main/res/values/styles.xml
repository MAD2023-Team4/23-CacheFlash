<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track</item>
    </style>

    <style name="SmallSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- Add any additional attributes you want to customize -->
        <item name="android:textSize">20sp</item> <!-- Set a smaller text size -->
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the hint text color to white -->
        <item name="android:textColorHint">#FFFFFFFF</item>
    </style>

    <style name="WhiteBorderTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Set the box stroke color to white -->
        <item name="boxStrokeColor">@color/white</item>
    </style>

</resources>