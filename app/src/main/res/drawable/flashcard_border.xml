<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Background color of the flashcard -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Border shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the flashcard content -->
            <stroke
                android:width="2dp" />
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
