<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Signup">

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Enter here..."
        android:inputType="text"
        android:textColor="#1400A9"
        android:textColorHint="#1400A9"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="46dp"
        android:text="@string/usernameText"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="23dp"
        android:text="@string/passwordText"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Enter here..."
        android:inputType="text"
        android:textColor="#1400A9"
        android:textColorHint="#1400A9"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="73dp"
        android:backgroundTint="#1400A9"
        android:text="@string/confirmCreationText"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="73dp"
        android:backgroundTint="#1400A9"
        android:text="@string/cancelCreationText"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cacheflash" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="263dp"
        android:layout_height="98dp"
        android:layout_marginStart="74dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/createAcctTitle"
        android:textAlignment="center"
        android:textColor="#1400A9"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />



</androidx.constraintlayout.widget.ConstraintLayout>