<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfeff"
    tools:context=".Login">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textTextInput"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="65dp"
        android:hint="@string/usernameText"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/darkBlue"
        app:boxStrokeColor="@color/darkBlue"
        app:boxStrokeWidth="2dp"
        app:helperTextTextColor="@color/darkBlue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:textSize="16sp"
            android:singleLine="true">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textTextInput2"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="65dp"
        android:hint="@string/passwordText"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/darkBlue"
        app:boxStrokeColor="@color/darkBlue"
        app:boxStrokeWidth="2dp"
        app:helperTextTextColor="@color/darkBlue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:textSize="16sp"
            android:singleLine="true">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="110dp"
        android:text="@string/newUserText"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="118dp"
        android:text="Forget Password?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="146dp"
        android:layout_height="61dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#1400A9"
        android:text="@string/loginButtonText"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="138dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:scaleType="centerCrop"
        android:src="@drawable/applogo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78.5dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="78.5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cacheflash" />

    <TextView
        android:id="@+id/privacy_policy_text"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="550dp"
        android:onClick="openPrivacyPolicy"
        android:text="Privacy Policy"
        android:textAlignment="center"
        android:textColor="@color/darkBlue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="297dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="57dp"
        android:text="By logging in or creating an account, you are agreeing with the privacy policy and that you are above 13 years old"
        android:textAlignment="center" />

</RelativeLayout>